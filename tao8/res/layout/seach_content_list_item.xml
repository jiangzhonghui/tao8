<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/seach_content_list_item_rl_title"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@drawable/title_small"
        android:padding="3dip" >

        <TextView
            android:id="@+id/seach_content_tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="服饰"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/seach_content_imbtn_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/ic_seach_list_more" />
    </RelativeLayout>

    <com.tao8.app.widget.InviteFrientView
        android:id="@+id/seach_content_if_group_detail_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:visibility="gone" >
    </com.tao8.app.widget.InviteFrientView>

</LinearLayout>