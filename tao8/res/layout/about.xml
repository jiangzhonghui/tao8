            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="#CDC5BF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>