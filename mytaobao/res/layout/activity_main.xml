<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/main_head_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_head_normal_mode" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_head_lable_taobao" />

        <ImageView
            android:id="@+id/main_iv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/main_iv_seach"
            android:background="@drawable/bg_head_back"
            android:src="@drawable/head_button_account" />

        <ImageView
            android:id="@+id/main_iv_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/bg_head_back"
            android:src="@drawable/head_button_seach" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_head_rl"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_iv_taobao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/main_taobao" />

        <ImageView
            android:id="@+id/main_iv_tmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/main_tianmao" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/main_ibtn_go_rebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:src="@drawable/icon_nomal_model_btn_go_rebate" />

</RelativeLayout>